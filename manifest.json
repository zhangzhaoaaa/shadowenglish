{
  "manifest_version": 3,
  "name": "Shadowing language practice",
  "version": "1.0.2",
  "description": "Practice speaking a language by looping segments of YouTube videos with transcripts in a side panel.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "*.js", "*.css", "*.html"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
